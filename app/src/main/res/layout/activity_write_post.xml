<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/outline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/page_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="23sp"
        android:textColor="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/major_title_text_style"
        tools:text="관광지 모집"/>

    <LinearLayout
        android:id="@+id/primary_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/padding"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/page_name_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="monospace"
                android:layout_marginEnd="@dimen/margin"
                style="@style/major_title_text_style"
                tools:text="제   목"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:hint="제목 입력"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="monospace"
                android:layout_marginEnd="@dimen/margin"
                style="@style/major_title_text_style"
                tools:text="사용언어"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:hint="English"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="monospace"
                android:layout_marginEnd="@dimen/margin"
                style="@style/major_title_text_style"
                tools:text="모집인원"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:hint="1/10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="monospace"
                android:layout_marginEnd="@dimen/margin"
                style="@style/major_title_text_style"
                tools:text="일   시"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:hint="날짜를 입력하세요"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondary_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        app:layout_constraintTop_toBottomOf="@id/primary_content_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/major_title_text_style"
            tools:text="추가 정보"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_photo_camera_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0/5"/>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/posting_content_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="5"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:gravity="top"
        android:padding="@dimen/padding"
        app:layout_constraintTop_toBottomOf="@id/secondary_content_layout"
        tools:hint="Is there someone who wants to go to KimGuangSeok street?"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/major_title_text_size"
        app:layout_constraintTop_toBottomOf="@id/posting_content_edit_text"
        tools:text="등록"/>


</androidx.constraintlayout.widget.ConstraintLayout>